# Convert all the words with 3 alphabets to upper case in a  sentence.

var sentences = "Convert all the words with 3 alphabets to upper case in a  sentence."

function wordCapitalisation(string) {
var newStr = string.split(' ').map(function(value){
       if(value.length === 3) {
            return value.toUpperCase();
       }
       return value;
  }).join(' ');
  console.log(newStr);
}

wordCapitalisation(sentences);
